dotnet_naming_rule.all_const_members_should_be_pascal_case.style = pascal_case

dotnet_naming_rule.all_static_members_should_be_pascal_case.severity = warning
dotnet_naming_rule.all_static_members_should_be_pascal_case.symbols = all_static_members
dotnet_naming_rule.all_static_members_should_be_pascal_case.style = pascal_case

